<h3>Availability <%= link_to 'Edit All', availability_ranges_path %></h3>
<table>
  <th>
    <tr>Day</tr>
    <tr>Start Time</tr>
    <tr>End Time</tr>
  </th>
  <% @teacher.availability_ranges.each do |r| %>
  <tr>
    <td><%= "#{r.weekday_name}" %></td>
    <td><%= "#{r.start_time_to_12h}" %></td>
    <td><%= "#{r.end_time_to_12h}" %></td>
    <td> <%= link_to "Edit #{r.weekday_name}", edit_availability_range_path(r.id) %> </td>
  </tr>
  <% end %>
</table>
