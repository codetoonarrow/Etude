<% if @availability_range.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@availability_range.errors.count, "Error") %> prevented this project from being created:</h2>

       <ul>
         <% @availability_range.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>

<h1>AvailabilityRanges</h1>
<% weekdays = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'] %>
<% x = 0 %>
<% 7.times do %>
  <%= form_for @availability_range  do |f| %>
    <label for="weekday"><%= weekdays[x] %></label>
    <%= f.hidden_field(:weekday, value: x)%>
    <%= f.label :start_time %>
    <%= f.number_field(:start_time, in: 0..23) %>
    <%= f.label :end_time %>
    <%= f.number_field(:end_time, in: 0..23) %>
    <span class="actions">
    <%= f.submit "Add #{weekdays[x]} hours"%>
    </span>
    <% x = x + 1 %>
  <% end %>
<% end %>
