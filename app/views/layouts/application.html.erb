<!DOCTYPE html>
<html>
  <head>
    <title>Etude</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!--Import Google Icon Font-->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

  </head>

  <body>
    <nav class="black" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="<%= root_path %>" class="brand-logo">Étude</a>
        <ul class="right hide-on-med-and-down">
          <li><a href="<%= root_path %>">Main</a></li>
          <% unless current_user %>
            <li><%= link_to 'Sign Up', new_user_path %></li>
            <li><%= link_to 'Log In', new_session_path %></li>
          <% end %>
          <% if current_user %>
          <li><%= "Hello #{current_user.first_name}!" %></li>
          <li><a href="<%= user_path(current_user.id) %>"><%= "Profile" %></a></li>
          <li><%= link_to 'Log Out', session_path(current_user.id), :method => :delete %></li>
          <% end %>
        </ul>
        <ul id="nav-mobile" class="side-nav">
          <li><a href="<%= root_path %>">Main</a></li>
          <% unless current_user %>
            <li><%= link_to 'Sign Up', new_user_path %></li>
            <li><%= link_to 'Log In', new_session_path %></li>
          <% end %>
          <% if current_user %>
          <li><a href="<%= user_path(current_user.id) %>"><%= "Your Profile" %></a></li>
          <li><%= link_to 'Log Out', session_path(current_user.id), :method => :delete %></li>
          <% end %>
        </ul>
        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
      </div>
    </nav>

      <%= yield %>

    <footer class="page-footer black">
  <div class="container">
    <div class="row">
      <div class="col l6 s12">
        <h5 class="white-text">Footer Content</h5>
        <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
      </div>
      <div class="col l4 offset-l2 s12">
        <h5 class="white-text">Links</h5>
        <ul>
          <li><a class="grey-text text-lighten-3" href="#!">Contact Us</a></li>
          <li><a class="grey-text text-lighten-3" href="#!">Legal</a></li>
          <li><a class="grey-text text-lighten-3" href="#!">LinkedIn</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-copyright">
    <div class="container">
    © 2016 Étude
    <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
    </div>
  </div>
</footer>
  </body>
</html>
