<!DOCTYPE html>
<html>
  <head>
    <title>Etude</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!--Import Google Icon Font-->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

  </head>

  <body>
    <header>
      <h1><%= link_to 'Étude', root_path %></h1>
      <div id="profile-links">
      <% if current_user %>
        <% if current_user.teacher %>
          <%= 'Hello Teacher ' + current_user.first_name %>
        <% elsif current_user.student %>
          <%= 'Hello Student ' + current_user.first_name %>
        <% else %>
          <%= link_to "I want to teach", new_teacher_path %>
          <%= link_to "I want to learn", new_student_path %>
        <% end %>
        <%= link_to 'Log Out', session_path(current_user.id), :method => :delete %>
        <%= link_to 'My Profile', user_path(current_user.id) %>
      <% else %>
        <%= link_to 'Log In', new_session_path %>
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>
      </div>
    </header>
    <section id="main">
      <%= yield %>
      <%= console %>
    </section>
    <footer> Étude </footer>
  </body>
</html>
