<!DOCTYPE html>
<html>
  <head>
    <title>Etude</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!--Import Google Icon Font-->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
      <div class="brand-logo"><%= link_to 'Étude', root_path %></div>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
      <% if current_user %>
        <% if current_user.teacher %>
          <li><%= 'Hello Teacher ' + current_user.first_name %></li>
        <% elsif current_user.student %>
          <li><%= 'Hello Student ' + current_user.first_name %></li>
        <% else %>
          <li><%= link_to "I want to teach", new_teacher_path %></li>
          <li><%= link_to "I want to learn", new_student_path %></li>
        <% end %>
        <li><%= link_to 'Log Out', session_path(current_user.id), :method => :delete %></li>
        <li><%= link_to 'My Profile', user_path(current_user.id) %></li>
      <% else %>
        <li><%= link_to 'Log In', new_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_path %></li>
      <% end %>
      </ul>
      </div>
    </nav>
    <section id="main">
      <%= yield %>
    </section>
    <footer> Étude </footer>
  </body>
</html>
