<!DOCTYPE html>
<html>
  <head>
    <title>Etude</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!--Import Google Icon Font-->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

  </head>

  <body>
    <nav class="black" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="<%= root_path %>" class="brand-logo">Ã‰tude</a>
        <ul class="right hide-on-med-and-down">
          <li><a href="<%= root_path %>">Main</a></li>
          <% unless current_user %>
            <li><%= link_to 'Sign Up', new_user_path %></li>
            <li><%= link_to 'Log In', new_session_path %></li>
          <% end %>
          <% if current_user %>
          <li><%= "Hello #{current_user.first_name}!" %></li>
          <li><a href="<%= user_path(current_user.id) %>"><%= "Profile" %></a></li>
          <li><%= link_to 'Log Out', session_path(current_user.id), :method => :delete %></li>
          <% end %>
        </ul>
        <ul id="nav-mobile" class="side-nav">
          <li><a href="<%= root_path %>">Main</a></li>
          <% unless current_user %>
            <li><%= link_to 'Sign Up', new_user_path %></li>
            <li><%= link_to 'Log In', new_session_path %></li>
          <% end %>
          <% if current_user %>
          <li><a href="<%= user_path(current_user.id) %>"><%= "Your Profile" %></a></li>
          <li><%= link_to 'Log Out', session_path(current_user.id), :method => :delete %></li>
          <% end %>
        </ul>
        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
      </div>
    </nav>

      <%= yield %>

