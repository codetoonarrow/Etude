
<div class="container">
  <div class="col s12">
    <h3><%= @subject %></h3> 
  </div>
  <!-- Start loop to make a single teacher -->
  <% @teachers.each do |t| %>
  <div class="row">
    <div class="col s12">
     <h4><%= "#{t.first_name} #{t.last_name}" %></h4>
    </div>
    <div class="col s6">
      <img class="teacher-pic-subj"src="<%= t.picture %>" alt="">
      <p><%= link_to 'View Full Profile', teacher_path(t) %></p>
      <p><%= link_to 'Book Lesson', new_teacher_lesson_path(t) %></p>
    </div>
    <div class="col s6">
      <h5><%= t.city %></h5>
      <h5><%= "$#{t.price} per hour" %></h5>
      <h6><strong>Availability:</strong></h6>
      <% t.availability_ranges.each do |a| %>
        <%= "#{a.weekday_name[0, 3]} #{a.start_time_to_12h} - #{a.end_time_to_12h}" %><br>
      <% end %>
    </div>
  </div>
  <!-- End loop to make a single teacher here -->
  <% end %>
</div>
